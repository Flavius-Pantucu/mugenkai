{
  "name": "mugenkai",
  "version": "1.0.0",
  "description": "A full-stack anime/manga streaming and reading platform using modern web technologies, microservices architecture, event-driven communication (Kafka), and centralized E2E testing.",
  "homepage": "https://github.com/Flavius-Pantucu/mugenkai#readme",
  "bugs": {
    "url": "https://github.com/Flavius-Pantucu/mugenkai/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flavius-Pantucu/mugenkai.git"
  },
  "license": "ISC",
  "author": "Flavius Pantucu",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "e2e": "turbo run e2e",
    "docker:prod:up": "docker-compose -f docker/docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker/docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker/docker-compose.prod.yml logs -f",
    "docker:dev:up": "docker-compose -f docker/docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker/docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker/docker-compose.dev.yml logs -f"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.0.20",
    "eslint": "^7.32.0",
    "pnpm": "^10.8.0",
    "rxjs": "^7.8.2",
    "typescript": "^4.4.0"
  },
  "devDependencies": {
    "jest": "^27.0.0",
    "nx": "^12.10.0",
    "prettier": "^2.8.8",
    "turbo": "^2.5.0"
  },
  "packageManager": "pnpm@10.8.0"
}
